<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <property name="now" value="CURRENT_TIMESTAMP()" dbms="h2"/>
    <property name="now" value="now()" dbms="mysql"/>
    <property name="now" value="now()" dbms="postgresql"/>

    <changeSet id="1" author="henrik">
        <createTable tableName="TAGS">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint
            columnNames="name"
            constraintName="tag_name"
            tableName="TAGS"
            />
        
        
        <createTable tableName="SENDERS">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint
            columnNames="name"
            constraintName="sender_name"
            tableName="SENDERS"
            />
        
        <createTable tableName="DOCUMENTS">
            <column name="id" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="filename" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="alternativeid" type="varchar(128)">
            </column>
            <column name="previewlink" type="varchar(128)">
            </column> 
            <column name="amount" type="number">
            </column>           
            <column name="created" type="DATETIME" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="DATETIME">
            </column>
            <column name="taglist" type="nvarchar(max)">
            </column>
            <column name="senderlist" type="nvarchar(max)">
            </column>
        </createTable>
        <addUniqueConstraint
            columnNames="alternativeid"
            constraintName="alternativeid_unique"
            tableName="DOCUMENTS"
            />
        
        <createTable tableName="DOCUMENTS_TO_TAGS">
            <column name="document_id" type="char(36)">
                <constraints nullable="false" references="documents(id)" foreignKeyName="fk_document_tag_id"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false" references="tags(id)" foreignKeyName="fk_tag_document_id"/>
            </column>
        </createTable>
        <addPrimaryKey 
            columnNames="document_id, tag_id"
            constraintName="pk_document_tag_id"
            tableName="DOCUMENTS_TO_TAGS"
            />
            
        <createTable tableName="DOCUMENTS_TO_SENDERS">
            <column name="document_id" type="char(36)">
                <constraints nullable="false" references="documents(id)" foreignKeyName="fk_document_sender_id"/>
            </column>
            <column name="sender_id" type="BIGINT">
                <constraints nullable="false" references="senders(id)" foreignKeyName="fk_sender_document_id"/>
            </column>
        </createTable>
        <addPrimaryKey 
            columnNames="document_id, sender_id"
            constraintName="pk_document_sender_id"
            tableName="DOCUMENTS_TO_SENDERS"
            />
            
            
        <createTable tableName="UPLOADS">
            <column name="id" type="char(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="filename" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="mimetype" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="DATETIME" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>
            
        
    </changeSet>
</databaseChangeLog>